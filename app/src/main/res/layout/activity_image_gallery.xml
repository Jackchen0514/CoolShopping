<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.myxh.coolshopping.ui.activity.ImageGalleryActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/image_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_photo_height"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/image_bottom_layout_padding"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/image_tv_product"
            style="@style/image_gallery_textView_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            tools:text="国际酒店"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/image_tv_index"
                style="@style/image_gallery_textView_style"
                tools:text="1"/>
            <TextView
                style="@style/image_gallery_textView_style"
                android:text="/"/>
            <TextView
                android:id="@+id/image_tv_count"
                style="@style/image_gallery_textView_style"
                tools:text="4"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
